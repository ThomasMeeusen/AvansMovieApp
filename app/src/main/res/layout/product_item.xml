<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_product_item_layout"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_product_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Titel"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_item_specstag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="specsTag"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_product_item_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_item_name" />

    <TextView
        android:id="@+id/tv_product_item_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Summary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_product_item_specstag"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>